@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@section styles {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css" />
}

<div class="text-center">
    <h1 class="display-4">Monitor Uri</h1>
</div>

<br />
<br />

<div class="ibox-content">
    <div class="row">
        <div class="col-md-6">
            <strong>Instituição:</strong>
        </div>
        <div class="col-md-6">
            <strong>Pesquisa:</strong>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <select class="form-control" id="ddlInstituicao">
                <option selected>UNASP</option>
            </select>
        </div>
        <div class="col-md-6">
            <input type="text" class="form-control" id="txtPesquisa" />
        </div>
    </div>
</div>

<br />
<br />

<div class="table-responsive">
    <table class="table table-striped table-hover dataTables" id="tableRanking">
        <thead>
            <tr>
                <th>Posição</th>
                <th>Ranking Uri</th>
                <th>Nome</th>
                <th>Exercícios Resolvidos</th>
                <th>Tentativas</th>
                <th>Submissões</th>
                <th>Pontuação</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section scripts {
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>
}
